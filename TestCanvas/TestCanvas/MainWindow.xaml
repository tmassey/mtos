        <TabControl x:Name="Tabs" Grid.Row="2" Grid.Column="1" Margin="5">

          <TabItem Header="Warehouse Map" x:Name="MapTab">
                
                <Viewbox Stretch="Fill" HorizontalAlignment="Left"  VerticalAlignment="Top">
                    <Canvas x:Name="Canvas" Background="Transparent" Margin="0" Width="810"
                        Height="810" HorizontalAlignment="Left"
                        VerticalAlignment="Top">

                        <Canvas.LayoutTransform>
                            <ScaleTransform ScaleY="1" />
                        </Canvas.LayoutTransform>


                    </Canvas>
                </Viewbox>
            </TabItem>
           
            
                
        </TabControl>
        <StatusBar HorizontalAlignment="Left" Grid.Row="3" VerticalAlignment="Bottom" >
            <UniformGrid Columns="3">
                <TextBlock></TextBlock>
                <TextBlock HorizontalAlignment="Center" x:Name="txtProgress"></TextBlock>
                <ProgressBar x:Name="Progress"></ProgressBar>
            </UniformGrid>
        </StatusBar>



    </Grid>
    
</Window>